    style.
      body {
        font-family: 'Source Sans Pro', sans-serif;
        background-color: transparent;
      }

      code, kbd, pre, samp {
        font-family: 'Source Code Pro', Menlo, Monaco, Consolas, 'Courier New', monospace;
      }

      #embed {
        border-radius: 4px;
        border: 1px solid #C7C7C7;
        background-color: #FFFFFF;

        /* TODO: @Jitachi */
        -webkit-box-shadow: 0px 1px 2px 0px #EAEAEA;
        -moz-box-shadow: 0px 1px 2px 0px #EAEAEA;
        box-shadow: 0px 1px 2px 0px #EAEAEA;

        -moz-background-clip: padding;
        -webkit-background-clip: padding-box;
        background-clip: padding-box;
      }

      #embed .nav-tabs {
        background-color: #FCFCFC;
        border-color: #E6E6E6;
      }

      #embed .nav-tabs > li > a,
      #embed .nav-tabs > li > a:focus,
      #embed .nav-tabs > li > a:hover {
        border-top: none;
        border-bottom: none;
        border-radius: 0;

        color: #8C9093;
        font-weight: 600;
      }

      #embed .nav-tabs > li.active > a,
      #embed .nav-tabs > li.active > a:focus,
      #embed .nav-tabs > li.active > a:hover {
        color: #3079AC;
        border-color: #E6E6E6;
      }

      #embed .nav-tabs {
        border-top-left-radius: 4px;
        border-top-right-radius: 4px;
      }

      #embed .nav-tabs > li:first-of-type > a {
        border-top-left-radius: 4px;
      }

      #embed .nav-tabs > li:first-of-type > a:hover {
        border-left: none;
      }

      #embed .nav-tabs > li:last-of-type > a {
        border-top-right-radius: 4px;
      }

      #embed .nav-tabs > li:hover a {
        background-color: #FFFFFF;
      }

      #embed .nav-tabs > li:first-of-type > a {
        border-left: none;
        border-top-left-radius: 4px;
      }

      #embed .tab-content .tab-pane,
      #embed .tab-content .tab-pane pre,
      #embed .tab-content .tab-pane pre code {
        height: 100%;
      }

      #embed footer {
        padding: 10px 15px;

        color: #848D94;

        border-top: 1px solid #E6E6E6;
        border-bottom-left-radius: 4px;
        border-bottom-right-radius: 4px;

        background-color: #FFFFFF;
      }

      #embed footer a {
        color: #399EE5;
      }

      #embed pre {
        margin: 0;
        padding: 15px;

        border: none;
        border-radius: none;

        background-color: #FFFFFF;
      }

      .hljs {
        padding: 0;
      }

    block styles

