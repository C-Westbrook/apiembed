extends layout.jade

block content
  div#embed
    ul.nav.nav-tabs
      each code, target in output
        - var clients = (typeof code === 'string') ? false : Object.keys(code)

        if (!clients)
          li: a(href='##{target}', data-toggle='tab')= namedTargets[target].title

        else if (clients.length === 1)
          li: a(href='##{target}-#{clients[0]}', data-toggle='tab')= namedTargets[target].title

        else
          li.dropdown
            a.dropdown-toggle(href='#', data-toggle='dropdown')
              span= namedTargets[target].title
              span &nbsp;
              span.caret

            ul.dropdown-menu
              each _code, client in code
                li: a(href='##{target}-#{client}', data-toggle='tab') #[i.fa.fa-check] #[= namedTargets[target].clients[client].title]

    div.tab-content
      each code, target in output
        if (typeof code === 'string')
          div.tab-pane(id= target).fade
            button(class='btn btn-default btn-xs btn-clipboard', data-clipboard-target='#{target}'): #[i.fa.fa-copy] #[span Copy to Clipboard]
            pre: code= code

        else
          each _code, _target in code
            div.tab-pane(id='#{target}-#{_target}').fade
              button(class='btn btn-default btn-xs btn-clipboard', data-clipboard-target='#{target}-#{_target}'): #[i.fa.fa-copy] #[span Copy to Clipboard]
              pre: code= _code

    footer.hidden-xs Powered by #[a(href="https://apiembed.com/") APIembed], made with &hearts; at #[a(href="https://www.mashape.com/") Mashape].
    footer.visible-xs #[a(href="https://apiembed.com/") APIembed] by #[a(href="https://www.mashape.com/") Mashape].

block scripts
  script(type='text/javascript').
    $(function() {
      ZeroClipboard.config({
        swfPath: '//cdnjs.cloudflare.com/ajax/libs/zeroclipboard/2.2.0/ZeroClipboard.swf',
        forceHandCursor: true,
        trustedDomains: [window.location.host, "cdnjs.cloudflare.com"]
      });

      new ZeroClipboard($('.btn-clipboard'));

      // select first tab
      $('.nav-tabs a:first').tab('show');

      // highlight the code
      $('.tab-content pre code').each(function (i, block) {
        hljs.highlightBlock(block);
      });
    });
